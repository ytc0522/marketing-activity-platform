<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="marketing.activity.seckill.repository.mapper.SeckillGoodsMapper">

    <resultMap id="BaseResultMap" type="marketing.activity.seckill.repository.entity.SeckillGoods">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="activityId" column="activity_id" jdbcType="BIGINT"/>
        <result property="goodsId" column="goods_id" jdbcType="VARCHAR"/>
        <result property="goodsName" column="goods_name" jdbcType="VARCHAR"/>
        <result property="initCount" column="init_count" jdbcType="INTEGER"/>
        <result property="availableCount" column="available_count" jdbcType="INTEGER"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,activity_id,goods_id,
        goods_name,init_count,available_count,
        version,create_time,update_time
    </sql>
    <update id="deductStock">
        update seckill_goods
        set available_count = available_count - 1
        where id = #{id}
          and available_count = #{beforeStock}
    </update>
</mapper>
